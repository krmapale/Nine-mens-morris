            <Setter Property="X2" Value="{Binding ElementName=canvas1, Path=HalfWidth}"/>
            <Setter Property="Y2" Value="{Binding ElementName=canvas1, Path=HalfHeight}"/>
        </Style>
        <Style x:Key="PuolHorizontalViivaVasen" TargetType="Line">
